{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install-backend": {
      "inputs": [
        { "image": "node:20" },
        { "local": true }
      ],
      "commands": [
        "cd backend && npm install"
      ]
    },
    "install-frontend": {
      "inputs": [
        { "image": "node:20" },
        { "local": true }
      ],
      "commands": [
        "cd frontend && npm install"
      ]
    },
    "build-frontend": {
      "inputs": [
        { "step": "install-frontend" },
        { "local": true }
      ],
      "commands": [
        "cd frontend && npm run build"
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "step": "install-backend",
        "include": ["backend/**"]
      },
      {
        "step": "build-frontend",
        "include": ["frontend/dist/**"]
      }
    ],
    "startCommand": "cd backend && node server.js"
  }
}
