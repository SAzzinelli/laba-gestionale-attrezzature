{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install-backend": {
      "base": {
        "image": "node:20"
      },
      "commands": [
        "cd backend",
        "npm install"
      ]
    },
    "install-frontend": {
      "base": {
        "image": "node:20"
      },
      "commands": [
        "cd frontend",
        "npm install"
      ]
    },
    "build-frontend": {
      "base": {
        "image": "node:20"
      },
      "inputs": [{ "step": "install-frontend" }],
      "commands": [
        "cd frontend",
        "npm run build"
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "inputs": [
      {
        "step": "install-backend",
        "include": ["backend/**"]
      },
      {
        "step": "build-frontend",
        "include": ["frontend/dist/**"]
      }
    ],
    "startCommand": "cd backend && node server.js",
    "variables": {
      "NODE_ENV": "production"
    }
  }
}
